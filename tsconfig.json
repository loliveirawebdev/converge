{
  "compilerOptions": {
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": { "~/*": ["./*"] }
  },
  "extends": "expo/tsconfig.base",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
